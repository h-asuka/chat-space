.main-bar__contents__main
  .main-bar__contents__main__above
    .main-bar__contents__main__above__a
      = message.user.name
    .main-bar__contents__main__above__b
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .main-bar__contents__main__below
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?